<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rhynix.eliud.loginscreen.MainActivity">

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/back"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/loginbackground"/>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/loginlogo"
        android:src="@drawable/ic_ac_unit"
        android:scaleType="fitCenter"
        android:layout_marginBottom="30dp"/>

<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/loginlogo"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/transparentback"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Just a few more details to get you started"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <AutoCompleteTextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email"
            android:background="@drawable/roundedwhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/user"
            android:textSize="14dp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"/>
        <AutoCompleteTextView
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Password"
            android:background="@drawable/roundedwhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/password"
            android:textSize="14dp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>
        <AutoCompleteTextView
            android:id="@+id/userConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Confirm Password"
            android:background="@drawable/roundedwhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/repeatpass"
            android:textSize="14dp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>
        <RadioButton
            android:id="@+id/radioBitton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms and Conditions"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:text="Register"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/registerbutton"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We will be sending a confirmation code via SMS.Please input the CPDE to activate your account"
        android:layout_below="@id/scrollView"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>



</RelativeLayout>
